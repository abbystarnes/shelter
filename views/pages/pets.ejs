<% include ../partials/header %>
<% include ../partials/login %>

  <div class="container">
    <% for(pet in pets){%>
      <div class='card card-pet'>
        <img src=<%=pets[pet].photo%>></img>
        <a href='/pets/<%=pets[pet].id%>'><h3><%=pets[pet].name%></h3></a>
        <a href="/pets" class='btn red delete-pet-button' id='pet<%=pets[pet].id%>'>Delete</a>
      </div>
    <%}%>
  </div>
    <a class='btn-large btn-floating green waves-effect waves-light btn btn-pet-add' href="#modal_addPet"><i class="material-icons">add</i></a>
    <div id='modal_addPet' class='modal'>
        <div class="modal-content">
            <h3>New Pet</h3>
            <form id="pet_add" action="/pet_add" method="POST">
              <label for="age">Age:</label>
              <input id="age" type="text" name="age" value="">
              <label for="size">Size:</label>
              <input id="size" type="text" name="size" value="">
              <label for="breed">Breed:</label>
              <input id="breed" type="breed" name="breed" value="">
              <label for="name">Name:</label>
              <input id="name" type="text" name="name" value="">
              <label for="sex">Sex:</label>
              <input id="sex" type="text" name="sex" value="">
              <label for="description">Description:</label>
              <input id="description" type="text" name="description" value="">
              <label for="petID">petID:</label>
              <input id="petID" type="number" name="petID" value="">
              <label for="type">Type:</label>
              <input id="type" type="text" name="type" value="">
              <label for="photo">Photo:</label>
              <input id="photo" type="text" name="photo" value="">
              <label for="foster_name">Foster Name:</label>
              <input id="foster_name" type="text" name="foster_name" value="">
              <label for="foster_email">Foster Email:</label>
              <input id="foster_email" type="text" name="foster_email" value="">
            </form>
          </div>
        <div class="modal-footer">
          <button type='submit' href="/pets" form="pet_add" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</button>
        </div>
    </div>

<% include ../partials/footer %>
