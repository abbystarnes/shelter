
<div id='modal-login' class='modal'>

    <div class="modal-content">
      <div>
        <p>Sign in with Google:</p>
        <div class="g-signin2" data-onsuccess="onSignIn"></div>
      </div>
      <div>
        <p>Sign in with Email &amp; Password:</p>
        <form id="localLogin" action="/login_local" method="post">
          <label for="email">Email:</label>
          <input id="email" class='validate' type="email" name="email" value="">
          <label for="pwd">Password:</label>
          <input id="pwd" class='validate' type="text" name="pwd" value="">
        </form>
        <%# <input type="submit" name="submit" value="submit">%>
      </div>
    </div>
    <div class="modal-footer">
      <button type='submit' href="#!" form="localLogin" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</button>
    </div>
</div>
